<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.rocketshipcheckingtool.ui.MainViewController" stylesheets="@../style.css">
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="100.0" spacing="20.0"
              styleClass="sidebar" BorderPane.alignment="CENTER">
            <VBox alignment="TOP_CENTER">
                <ToggleButton fx:id="btnHome" onAction="#handleSidebarClick" styleClass="buttonSidebar">
                    <graphic>
                        <fx:include source="/com/rocketshipcheckingtool/ui/graphics/home.fxml"/>
                    </graphic>
                    <toggleGroup>
                        <ToggleGroup fx:id="toggleGroup"/>
                    </toggleGroup>
                </ToggleButton>
                <Label alignment="CENTER" text="Home" textFill="white">
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                </Label>
            </VBox>

            <VBox alignment="TOP_CENTER">
                <ToggleButton fx:id="btnDetails" onAction="#handleSidebarClick" toggleGroup="$toggleGroup"
                              styleClass="buttonSidebar">
                    <graphic>
                        <fx:include source="/com/rocketshipcheckingtool/ui/graphics/details.fxml"/>
                    </graphic>
                </ToggleButton>
                <Label alignment="CENTER" text="Details" textFill="white">
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                </Label>
            </VBox>

            <VBox alignment="TOP_CENTER">
                <ToggleButton fx:id="btnStatistiken" styleClass="buttonSidebar" onAction="#handleSidebarClick"
                              toggleGroup="$toggleGroup">
                    <graphic>
                        <fx:include source="/com/rocketshipcheckingtool/ui/graphics/statistiken.fxml"/>
                    </graphic>
                </ToggleButton>
                <Label alignment="CENTER" text="Statistiken" textFill="white">
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                </Label>
            </VBox>

            <VBox alignment="TOP_CENTER">
                <ToggleButton fx:id="btnLager" onAction="#handleSidebarClick" toggleGroup="$toggleGroup"
                              styleClass="buttonSidebar">
                    <graphic>
                        <fx:include source="/com/rocketshipcheckingtool/ui/graphics/lager.fxml"/>
                    </graphic>
                </ToggleButton>
                <Label alignment="CENTER" text="Lager" textFill="white">
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                </Label>
            </VBox>

            <VBox alignment="TOP_CENTER">
                <ToggleButton fx:id="btnNachrichten" onAction="#handleSidebarClick" styleClass="buttonSidebar"
                              toggleGroup="$toggleGroup">
                    <graphic>
                        <fx:include source="/com/rocketshipcheckingtool/ui/graphics/nachrichten.fxml"/>
                    </graphic>

                </ToggleButton>
                <Label alignment="CENTER" text="Nachrichten" textFill="white">
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                </Label>
            </VBox>

            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <padding>
                <Insets top="50.0"/>
            </padding>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" styleClass="contentArea" BorderPane.alignment="CENTER"/>
    </center>

</BorderPane>
