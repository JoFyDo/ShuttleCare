<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.rocketshipcheckingtool.ui.auth.LoginViewController" styleClass="@style.css"
      style="-fx-background-color: rgb(206, 221, 255)" alignment="CENTER">
    <VBox alignment="CENTER" spacing="20" styleClass="vBox" focusTraversable="true" fx:id="focusTrap"
          VBox.vgrow="ALWAYS">
        <Label text="1 = Techniker - 2 = Manager" styleClass="header"/>
        <Label text="Benutzername" styleClass="header"/>
        <TextField fx:id="usernameField" promptText="Benutzername" alignment="CENTER"/>

        <Label text="Passwort" styleClass="header"/>
        <PasswordField fx:id="passwordField" promptText="passwort" alignment="CENTER"/>

        <Button text="Login" onAction="#handleLogin" styleClass="buttonBig"
                style="-fx-background-color: rgb(26, 41, 82)"/>
    </VBox>
    <padding>
        <Insets left="100" right="100" top="100" bottom="100"/>
    </padding>
</VBox>
